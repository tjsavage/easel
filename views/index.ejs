<html ng-controller="AppCtrl">
	<head>
		<title>Easel</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
		<link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
		<link rel="stylesheet" type="text/css" href="/css/slider.css">
	</head>
	<body>
		<nav class="navbar navbar-default" role="navigation">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
					<span class="sr-only">Toggle nav</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="#">easel</a>
			</div>

			<div class="collapse navbar-collapse" id="navbar-collapse">
				<ul class="nav navbar-nav navbar-right">
					<li><a href="#" id="refresh-button"><span class="glyphicon glyphicon-refresh"></span></a></li>
				</ul>
			</div>
		</nav>

		<div class="container" id="dashboard">
			
		</div>

		<script type="text/template" id="template-led_strip">
			<div class="module">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">{{ name }}</h3>
					</div>
					<div class="panel-body">
						<div class="row" style="height: 40px">
							<div id="color" style="height: 80%; width: 100%; float-left:auto; float-right:auto"></div>
						</div>
						<div class="row">
							<div class="col-xs-3 col-md-2">
								<button type="button" id="power" class="btn btn-lg {{#if power }}btn-success{{else}}btn-danger{{/if}}">
									<span class="glyphicon glyphicon-off"></span>
								</button>								
							</div>
							<div class="col-xs-6 col-md-4">
								<p>
									<b>H</b>
									<input type="text" class="span2" value="" id="h" data-slider-min="0" data-slider-max="359" data-slider-step="1" data-slider-value="{{color.h}}" data-slider-id="HC" data-slider-orientation="horizontal" data-slider-tooltip="hide" data-slider-selection="after" />
								</p>
								<p>
									<b>S</b>
									<input type="text" class="span2" value="" id="s" data-slider-min="0" data-slider-max="100" data-slider-step="1" data-slider-value="{{asPercent color.s}}" data-slider-id="SC" data-slider-orientation="horizontal" data-slider-tooltip="hide" data-slider-selection="after" />
								</p>

								<p>
									<b>V</b>
									<input type="text" class="span2" value="" id="v" data-slider-min="0" data-slider-max="100" data-slider-step="1" data-slider-value="{{asPercent color.v}}" data-slider-id="VC" data-slider-orientation="horizontal" data-slider-tooltip="hide" data-slider-selection="after" />
								</p>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-6">
								<div class="input-group">
									<div class="input-group-btn">
										<button type="button" id="animation-pulse" class="btn btn-lg btn-default animation-button" data-toggle="dropdown">pulse</button>
										<button type="button" id="animation-rainbow" class="btn btn-lg btn-default animation-button">rainbow</button>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</script>

		<script type="text/javascript">
			SOCKET_IP = "<%= socketIP %>";
		</script>
		<script src="/js/jquery-1.10.2.min.js"></script>
		<script src="/js/bootstrap.min.js"></script>
		<script src="/js/handlebars.js"></script>
		<script src="/js/underscore.js"></script>
		<script src="/js/backbone-min.js"></script>
		<script src="/js/backbone-nested.js"></script>
		<script src="/js/www/backbone-app.js"></script>
		<script src="/socket.io/socket.io.js"></script>
		<script src="/js/bootstrap-slider.js"></script>
	</body>

</html>